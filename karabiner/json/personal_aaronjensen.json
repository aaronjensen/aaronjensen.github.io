{
  "title": "Personal rules (@aaronjensen)",
  "rules": [
    {
      "description": "Change f20 to hyper",
      "manipulators": [
        {
          "from": {
            "key_code": "f20",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": [
                "left_command",
                "left_control",
                "left_option"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Change f19 to super",
      "manipulators": [
        {
          "from": {
            "key_code": "f19",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_command",
              "modifiers": [
                "left_control",
                "left_option"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Change ; to hyper. (; if left alone)",
      "manipulators": [
        {
          "from": {
            "key_code": "semicolon"
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": [
                "left_command",
                "left_control",
                "left_option"
              ]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "semicolon"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "f17",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "semicolon"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Change caps to ctrl. (esc if left alone)",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
